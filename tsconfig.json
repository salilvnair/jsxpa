{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "./public",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}
